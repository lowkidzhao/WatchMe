{
  "name": "watchme",
  "version": "0.0.1",
  "description": "系统监控工具 Application for system monitoring",
  "author": "Pushme Me <1141846557@qq.com>",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on --timeout 15000 http://localhost:5173 && electron --trace-warnings .\"",
    "electron:build": "cross-env NODE_ENV=production npm run build && electron-builder -- ${@}"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "echarts": "^5.6.0",
    "modern-css-reset": "^1.4.0",
    "pinia": "^2.3.1",
    "systeminformation": "^5.25.11",
    "tencentcloud-sdk-nodejs": "^4.0.1031",
    "uuid": "^11.0.5",
    "vite-plugin-vuetify": "^2.1.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuetify": "^3.7.11",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "concurrently": "^9.1.2",
    "electron": "^34.1.1",
    "electron-builder": "^24.13.3",
    "vite-plugin-vue-devtools": "^7.7.1",
    "wait-on": "^8.0.2"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "site.pushme.www",
    "productName": "WatchMe",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false,
      "uninstallDisplayName": "WatchMeUninstall"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-mac.${ext}",
      "identity": null,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap",
        "rpm"
      ],
      "category": "Utility",
      "executableName": "WatchMe",
      "artifactName": "${productName}-${version}-linux.${ext}",
      "synopsis": "A utility application for monitoring",
      "description": "一个用于监控的工具应用",
      "desktop": {
        "Name": "WatchMe",
        "Comment": "A utility application for monitoring",
        "Icon": "WatchMe",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Utility;"
      }
    }
  },
  "license": "MIT"
}
